{
  "compilerOptions": {
    // … suas outras opções …
    "rootDir": "src",        // onde estão seus .ts
    "outDir": "dist",        // onde quer os .js compilados
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],     // só pega TS
  "exclude": ["node_modules", "dist", "**/*.js"]  // exclui .js na src
}
